{
  "manifest_version": 2,
  "name": "Convert YouTube to AnchorFM",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "https://jsonplaceholder.typicode.com",
    "https://youtube-to-snipd.pandibay.com/"
  ],
  "host_permissions": ["https://jsonplaceholder.typicode.com", "https://youtube-to-snipd.pandibay.com/"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Convert YouTube Video to Podcast"
  }
}
